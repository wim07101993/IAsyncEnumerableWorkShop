{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildEncoder",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Encoder/Encoder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "decoderTasks",
            "dependsOn": [ "buildDecoder", "ildasmDecoder"],
            "dependsOrder": "sequence"
        },
        {
            "label": "buildOldDecoder",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/OldDecoder/OldDecoder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildDecoder",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Decoder/Decoder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildWorkShop",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/WorkShop/WorkShop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "ildasmDecoder",
            "command": "dotent",
            "type": "process",
            "args": [
                "ildasm",
                "${workspaceFolder}/Decoder/bin/Debug/net5.0/Decoder.dll",
                "-o",
                "Decoder.il"
            ]
        }
    ]
}